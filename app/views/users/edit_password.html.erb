
<% flash.each do |message_type, message| %>
    <% byebug %>
    <div class="alert alert-<%= message_type == 'notice' ? 'success' : 'danger' %>" role="alert">
    <%= message %>
    </div>
<% end %>
<h2>Change Password</h2>
<h2><%= flash[:alert] %></h2>

<%= form_for :user, url: update_password_path, html: { method: :patch } do |f| %>
  <div class="field">
    <%= f.label :current_password %><br>
    <%= f.password_field :current_password, required: true %>
  </div>

  <div class="field">
    <%= f.label :new_password, "New Password" %><br>
    <%= f.password_field :new_password, required: true %>
  </div>

  <div class="field">
    <%= f.label :new_password_confirmation, "Confirm New Password" %><br>
    <%= f.password_field :new_password_confirmation, required: true %>
  </div>

  <div class="actions">
    <%= f.submit "Change Password" %>
  </div>

<% end %>